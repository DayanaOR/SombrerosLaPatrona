@page
@model SombrerosLaPatrona.Pages.FormFacturaModel
@{
}



<div class="contenido" style="height: auto;">
    <div class="">
        <h1>
            Factura
        </h1>
        <h2>
            Sombreros la patrona
        </h2>
        <div class="form">
            <form>
                <div class="form-container">
                    <div class="form-item width-93per">
                        <label for="txt.fecha">Fecha</label>
                        <input type="date" name="txt.fecha" id="txt.fecha">
                    </div>
                    <div class="form-item width-93per">
                        <label for="txt.cliente">Identificación</label>
                        <input type="text" name="txt.cliente" id="txt.cliente">
                    </div>
                    <div class="form-item width-93per">
                        <label for="txt.cliente">Nombre del cliente</label>
                        <input type="text" name="txt.cliente" id="txt.cliente">
                    </div>

                    <table>
                        <tr>
                            <th class="td-cod">Cod</th>
                            <th class="td-nombre">Nombre</th>
                            <th class="td-cantidad">Cantidad</th>
                            <th class="td-valorunitario">Valor unitario</th>
                            <th class="td-valortotal">Valor total</th>

                        </tr>
                        <tr>
                            <td class="td-cod">
                                <div class="form-item width-93per">
                                    <input type="text" name="txt.canproducto" id="txt.canproducto" value="1">
                                </div>
                            </td>
                            <td class="td-nombre">
                                <span>
                                    Poncho
                                </span>
                            </td>
                            <td class="td-cantidad">
                                <div class="form-item width-93per">
                                    <input type="number" name="txt.canproducto" id="txt.canproducto" value="5">
                                </div>
                            </td>
                            <td class="td-valorunitario">
                                <div class="form-item width-93per">
                                    <input type="number" name="txt.valorunitario" id="txt.valorunitario"
                                           value="10.000">
                                </div>
                            </td>
                            <td class="td-valortotal">
                                <span>
                                    50.000
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td class="td-cod">
                                <div class="form-item width-93per">
                                    <input type="text" name="txt.canproducto" id="txt.canproducto" value="2">
                                </div>
                            </td>
                            <td class="td-nombre">
                                <span>
                                    Mochila wayu
                                </span>
                            </td>
                            <td class="td-cantidad">
                                <div class="form-item width-93per">
                                    <input type="number" name="txt.canproducto" id="txt.canproducto" value="7">
                                </div>
                            </td>
                            <td class="td-valorunitario">
                                <div class="form-item width-93per">
                                    <input type="number" name="txt.valorunitario" id="txt.valorunitario"
                                           value="70.000">
                                </div>
                            </td>
                            <td class="td-valortotal">
                                <span>
                                    490.000
                                </span>
                            </td>

                        </tr>
                        <tr>
                            <td class="td-cod">
                                <div class="form-item width-93per">
                                    <input type="text" name="txt.canproducto" id="txt.canproducto" value="3">
                                </div>
                            </td>
                            <td class="td-nombre">
                                <span>
                                    Gorra plana
                                </span>
                            </td>
                            <td class="td-cantidad">
                                <div class="form-item width-93per">
                                    <input type="number" name="txt.canproducto" id="txt.canproducto" value="2">
                                </div>
                            </td>
                            <td class="td-valorunitario">
                                <div class="form-item width-93per">
                                    <input type="number" name="txt.valorunitario" id="txt.valorunitario"
                                           value="15.000">
                                </div>
                            </td>
                            <td class="td-valortotal">
                                <span>
                                    30.000
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="3">
                            </td>
                            <td>
                                Total sin iva
                            </td>
                            <td>
                                570.000
                            </td>
                        </tr>
                        <tr>
                            <td colspan="3">
                            </td>
                            <td>
                                Total con iva
                            </td>
                            <td>
                                678.000
                            </td>
                        </tr>
                    </table>
                    <div class="text-center">
                        <button type="submit" class="send">Crear factura</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
