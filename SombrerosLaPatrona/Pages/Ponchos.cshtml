@page
@model SombrerosLaPatrona.Pages.PonchosModel

<div class="card-container">
    @foreach (var Ponchos in @Model.Ponchos)
    {
        <div class="card">
            <div class="card-content" id="card_@Ponchos.Id">
                <div class="text-center">
                    <img src="@Ponchos.Img" alt="PonchoEconomico" class="img-card">
                </div>
                <hr>
                <div class="">
                    <div class="">
                        @Ponchos.Titulo
                    </div>
                    <div class="">
                        @Ponchos.Descripcion
                    </div>
                    <div class="">
                        V.Unitario: $ @Ponchos.ValorUnitario, V.Detal: $ @Ponchos.ValorDetal
                    </div>
                    <div>
                        Talla: @Ponchos.Talla
                    </div>
                    <div class="text-right">
                        Carrito
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@section Styles{
    <link rel="stylesheet" href="~/css/card.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
}